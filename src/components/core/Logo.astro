---
import config from "@/config/config.json";
import { Image } from "astro:assets";
const { src, showText } = Astro.props;
const {
  logo_text,
  logo_width,
  logo_height,
  title,
}: {
  logo: string;
  logo_text: string;
  logo_width: string;
  logo_height: string;
  title: string;
} = config.site;

const text = logo_text;
---

<a href="/" class="navbar-brand flex flex-row items-center">
  <Image
      class="h-20 w-auto"
      src="/images/ia-discapacidad.png"
      alt={title}
      width=47
      height=47
    />
  

  {
    showText != false && (
      <p class="hidden md:block text-text md:text-3xl font-bold ml-2">
        {text ? text : logo_text}
      </p>
    )
  }
</a>
